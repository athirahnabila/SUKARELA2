<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="@string/description_verification"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <com.github.glomadrian.codeinputlib.CodeInput
        android:id="@+id/dialog_login_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        app:hint_text="Pairing code" />

    <Button
        android:id="@+id/dialog_login_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/button_verification"
        android:text="@string/text_confirm"
        android:textColor="@color/white" />
</LinearLayout>