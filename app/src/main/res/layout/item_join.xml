<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/itemjoin_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/text_description"
        android:src="@drawable/winner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@+id/itemjoin_button"
        android:layout_toLeftOf="@id/itemjoin_button"
        android:layout_toEndOf="@+id/itemjoin_image"
        android:layout_toRightOf="@id/itemjoin_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemjoin_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/text_completed_title"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/itemjoin_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_completed_date" />
    </LinearLayout>

    <Button
        android:id="@+id/itemjoin_button"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_details"
        android:text="@string/text_detail"
        android:textColor="@color/white" />
</RelativeLayout>